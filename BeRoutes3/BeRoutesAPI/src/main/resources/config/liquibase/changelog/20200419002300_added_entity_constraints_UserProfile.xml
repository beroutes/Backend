<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity UserProfile.
    -->
    <changeSet id="20200419002300-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="country_id"
                                 baseTableName="user_profile"
                                 constraintName="fk_user_profile_country_id"
                                 referencedColumnNames="id"
                                 referencedTableName="country"/>

        <addForeignKeyConstraint baseColumnNames="photo_id"
                                 baseTableName="user_profile"
                                 constraintName="fk_user_profile_photo_id"
                                 referencedColumnNames="id"
                                 referencedTableName="photo"/>

        <addForeignKeyConstraint baseColumnNames="user_profile_id"
                                 baseTableName="user_profile_follower"
                                 constraintName="fk_user_profile_follower_user_profile_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>

        <addForeignKeyConstraint baseColumnNames="follower_id"
                                 baseTableName="user_profile_follower"
                                 constraintName="fk_user_profile_follower_follower_id"
                                 referencedColumnNames="id"
                                 referencedTableName="follower"/>
        
    </changeSet>
</databaseChangeLog>
